<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:textColor="#333333"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_title"
            android:layout_marginLeft="13px"
            android:layout_toRightOf="@id/tv_title"
            android:gravity="center_vertical"
            android:textColor="#ec0007"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30px"
            android:padding="16px"
            android:src="@mipmap/btn_delete_2" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginBottom="25px"
            android:layout_marginTop="2px"
            android:textColor="#518ced"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e5e5e5" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@android:color/transparent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/dialog_add_cart_brand"
            android:textColor="#808080"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="16px"
            android:textColor="#333333"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e5e5e5" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@android:color/transparent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/dialog_add_cart_standard"
            android:textColor="#808080"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_material_norms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="16px"
            android:textColor="#333333"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e5e5e5" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@android:color/transparent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/dialog_add_cart_type"
            android:textColor="#808080"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_material_model"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="16px"
            android:textColor="#333333"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e5e5e5" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@android:color/transparent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/dialog_add_cart_color"
            android:textColor="#808080"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_material_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="16px"
            android:textColor="#333333"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e5e5e5" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_iol"
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingLeft="24px"
        android:paddingRight="24px"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3px"
            android:text="@string/dialog_add_cart_need_palette"
            android:textColor="#808080"
            android:textSize="24px" />

        <EditText
            android:id="@+id/et_color"
            android:layout_width="250px"
            android:layout_height="55px"
            android:layout_marginLeft="35px"
            android:background="@drawable/gray_stroke_box"
            android:gravity="center_vertical"
            android:hint="@string/dialog_add_cart_please_input_color"
            android:padding="3px"
            android:paddingLeft="8px"
            android:singleLine="true"
            android:textColor="#333"
            android:textColorHint="#808080"
            android:textSize="32px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginTop="10px"
            android:text="@string/dialog_add_cart_need_fee_later"
            android:textColor="#518ced"
            android:textSize="24px"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e5e5e5" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@android:color/transparent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/dialog_add_cart_fright"
            android:textColor="#808080"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="16px"
            android:textColor="#ec0007"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e5e5e5" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@android:color/transparent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/dialog_add_cart_stair_house"
            android:textColor="#808080"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_stair_fee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="16px"
            android:textColor="#ec0007"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e5e5e5" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@android:color/transparent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/dialog_add_cart_elevator_house"
            android:textColor="#808080"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_elevator_fee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="16px"
            android:textColor="#ec0007"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e5e5e5" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:gravity="center_vertical"
            android:text="@string/dialog_add_cart_num"
            android:textColor="#808080"
            android:textSize="32px" />

        <com.youjuke.optimalmaterialtreasure.weights.AmountView
            android:id="@+id/av_num"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30px"
            app:btnWidth="60px"
            app:tvWidth="100px"></com.youjuke.optimalmaterialtreasure.weights.AmountView>

    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/btn_add_cart"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginTop="20px"
        android:background="#518ced"
        android:text="@string/dialog_add_cart_button_text"
        android:textColor="#ffffff"
        android:textSize="38px" />

</com.zhy.autolayout.AutoLinearLayout>