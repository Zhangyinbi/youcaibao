<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/write_box"
        android:orientation="vertical"
        android:paddingTop="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:text="发现新版本"
            android:textColor="#333333"
            android:textSize="32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:text="必须更新才可以使用喔~"
            android:textColor="#808080"
            android:textSize="22px" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:padding="20px"
            android:textColor="#333333"
            android:textSize="26px" />

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/number_progress_bar"
            style="@style/NumberProgressBar_Passing_Green"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/dialog_right_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/write_box"
            android:gravity="center"
            android:paddingBottom="22px"
            android:paddingTop="22px"
            android:text="更新"
            android:textColor="#000"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoFrameLayout>