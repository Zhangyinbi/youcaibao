<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="30px"
    android:paddingTop="40px">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="325px"
        android:layout_height="325px"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:padding="2px"/>


    <TextView
        android:id="@+id/tv_classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_pic"
        android:layout_below="@id/iv_pic"
        android:layout_marginTop="20px"
        android:maxLines="2"
        tools:text="打哈哈代课老师的"
        android:ellipsize="end"
        android:textColor="#333333"
        android:textSize="26px" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_pic"
        android:layout_alignRight="@id/iv_pic"
        android:layout_below="@id/tv_classify"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/tv_price"
            android:textColor="#fe731a"
            tools:text="你好搜啊好好打"
            android:textSize="24px" />

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_gwc_2" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>