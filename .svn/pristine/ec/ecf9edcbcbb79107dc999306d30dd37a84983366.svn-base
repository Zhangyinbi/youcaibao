<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1"
    tools:context=".app.login.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="85px"
        android:text="优材宝"
        android:background="#fff"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="40px"
        android:translationZ="3px"
        android:layout_gravity="center_horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_auto_basewidth="height"
        android:background="#e5e5e5"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="46px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:textSize="35px"
            android:textColor="#333"
            android:text="账户："/>
        <EditText
            android:id="@+id/et_user_name"
            android:layout_marginLeft="10px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:maxLength="11"
            android:hint="请输入用户名"
            android:textSize="35px"
            android:text="秀"
            android:textColorHint="#cfcfcf"
            android:textColor="#333"
            android:background="@android:color/transparent"
            android:layout_height="100px" />
    </com.zhy.autolayout.AutoLinearLayout>



    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="2px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:textSize="35px"
            android:textColor="#333"
            android:text="密码："/>
        <EditText
            android:layout_marginLeft="10px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:textSize="35px"
            android:text="123456a"
            android:id="@+id/et_user_paw"
            android:textColorHint="#cfcfcf"
            android:textColor="#333"
            android:background="@android:color/transparent"
            android:layout_height="100px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_gravity="center_horizontal"
        android:layout_width="690px"
        android:background="@drawable/green_press_check"
        android:layout_height="96px"
        android:layout_marginTop="38px"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="36px" />

</com.zhy.autolayout.AutoLinearLayout>
