<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_marginBottom="10px"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:layout_marginTop="30px"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="PxUsage">

            <TextView
                android:id="@+id/tv_materialName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="510px"
                android:textColor="@color/c_333333"
                android:textSize="30px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌:"
                    android:textColor="@color/c_808080"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/tv_brandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginStart="20px"
                    android:textColor="@color/c_808080"
                    android:textSize="22px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="型号:"
                    android:textColor="@color/c_808080"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/tv_materialModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginStart="20px"
                    android:textColor="@color/c_808080"
                    android:textSize="22px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginStart="30px"
                    android:text="规格:"
                    android:textColor="@color/c_808080"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/tv_materialNorms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginStart="20px"
                    android:textColor="@color/c_808080"
                    android:textSize="22px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_materialPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:textColor="@color/c_ee0005" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10px"
            android:layout_marginEnd="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            tools:ignore="PxUsage">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="数量:"
                android:textColor="@color/c_808080"
                android:textSize="22px" />

            <TextView
                android:id="@+id/tv_material_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="24px"
                android:layout_marginStart="24px"
                android:textColor="@color/c_808080"
                android:textSize="22px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginEnd="24px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginStart="24px"
        android:background="@color/c_f0f0f0" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginEnd="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginStart="20px"
        android:layout_marginTop="20px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_liuyan" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_leave_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_999999" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>